{
  "extends": [
    "plugin:@shopify/node",
    "plugin:@shopify/typescript",
    "plugin:@shopify/prettier",
    "plugin:@shopify/typescript-type-checking"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "no-console": "off",
    "no-process-env": "off",
    "@typescript-eslint/naming-convention": "off",
    "line-comment-position": "off",
    "import/no-cycle": "off"
  }
}
